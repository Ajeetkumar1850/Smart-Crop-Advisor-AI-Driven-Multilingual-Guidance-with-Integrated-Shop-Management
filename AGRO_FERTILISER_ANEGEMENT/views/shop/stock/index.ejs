<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Stock List</title>
  <style>
    table {
      border-collapse: collapse;
      width: 80%;
      margin: 20px auto;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 10px 15px;
      text-align: left;
    }
    th {
      background-color: #f0f0f0;
    }
    h2 {
      text-align: center;
      margin-top: 30px;
    }
  </style>
</head>
<body>
  <h2>All Stocks</h2>
  <table>
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Quantity</th>
        <th>Last Updated</th>
      </tr>
    </thead>
    <tbody>
      <% allstocks.forEach(stock => { %>
        <tr>
          <td><%= stock.product ? stock.product.name : 'N/A' %></td>
          <td><%= stock.quantity %></td>
          <td><%= stock.updatedAt.toDateString() %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
    <div style="text-align: center; margin-top: 20px;">
        <a href="/stock/new" style="padding: 10px 15px; background-color: #28a745; color: white; text-decoration: none; border-radius: 5px;">Add New Stock</a>
        <a href="/prod" style="padding: 10px 15px; background-color: #007bff; color: white; text-decoration: none; border-radius: 5px; margin-left: 10px;">View Products</a>
    </div>

</body>
</html>

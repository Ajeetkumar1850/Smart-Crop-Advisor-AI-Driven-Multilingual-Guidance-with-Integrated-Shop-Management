<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Edit Stock</title>
  <style>
    form {
      width: 300px;
      margin: 40px auto;
      display: flex;
      flex-direction: column;
      gap: 15px;
    }
    label {
      font-weight: bold;
    }
    input, select, button {
      padding: 8px;
      font-size: 1rem;
    }
    button {
      cursor: pointer;
      background-color: #007bff;
      color: white;
      border: none;
    }
    button:hover {
      background-color: #0056b3;
    }
    .cancel-link {
      margin-top: 10px;
      text-align: center;
      display: block;
      color: #555;
      text-decoration: none;
    }
    .cancel-link:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <h2 style="text-align:center;">Edit Stock</h2>
  <form method="POST" action="/stock/<%= stock._id %>?_method=PUT">
    <label for="product">Product:</label>
    <select name="stock[product]" id="product" required>
      <% products.forEach(product => { %>
        <option value="<%= product._id %>" <%= product._id.equals(stock.product._id) ? 'selected' : '' %>>
          <%= product.name %>
        </option>
      <% }) %>
    </select>

    <label for="quantity">Quantity:</label>
    <input 
      type="number" 
      name="stock[quantity]" 
      id="quantity" 
      min="1" 
      value="<%= stock.quantity %>" 
      required 
    />

    <button type="submit">Update Stock</button>
  </form>

  <a href="/stock" class="cancel-link">Cancel</a>
</body>
</html>

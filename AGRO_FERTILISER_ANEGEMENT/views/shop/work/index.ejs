<!DOCTYPE html>
<html>
<head>
    <title>All Workers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { padding: 20px; background-color: #f8f9fa; }
        .workers-container { max-width: 1000px; margin: 30px auto; background: white; padding: 30px; border-radius: 8px; box-shadow: 0 0 15px rgba(0,0,0,0.1); }
        .worker-list { list-style: none; padding: 0; }
        .worker-item { padding: 15px 0; border-bottom: 1px solid #eee; }
        .worker-details { display: flex; justify-content: space-between; align-items: center; }
        .worker-info { flex: 1; }
        .worker-actions { display: flex; gap: 10px; }
    </style>
</head>
<body>
    <div class="container">
        <div class="workers-container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Workers</h1>
                <a href="/worker/new" class="btn btn-primary">Add New Worker</a>
            </div>

            <ul class="worker-list">
                <% allworkers.forEach(worker => { %>
                    <li class="worker-item">
                        <div class="worker-details">
                            <div class="worker-info">
                                <a href="/worker/<%= worker._id %>" class="fs-5 fw-bold"><%= worker.name %></a>
                               
                            </div>
                           
                        </div>
                    </li>
                <% }) %>
            </ul>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
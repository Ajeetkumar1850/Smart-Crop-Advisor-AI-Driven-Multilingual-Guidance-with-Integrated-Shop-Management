<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Payments List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container py-5">
    <!-- Filter Form -->
    <div class="card mb-4 shadow-sm">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0">üîç Filter Payments</h5>
      </div>
      <div class="card-body">
        <form method="GET" action="/payments" class="row g-3">
          <div class="col-md-4">
            <label class="form-label">Customer Name:</label>
            <input name="customer" class="form-control" placeholder="Enter name...">
          </div>

          <div class="col-md-3">
            <label class="form-label">From Date:</label>
            <input type="date" name="from" class="form-control">
          </div>

          <div class="col-md-3">
            <label class="form-label">To Date:</label>
            <input type="date" name="to" class="form-control">
          </div>

          <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-success w-100">Apply Filter</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Payments Table -->
    <div class="card shadow-sm">
      <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">üìÑ Payment Records</h5>
        <a href="/payments/new" class="btn btn-primary btn-sm">
          ‚ûï Make New Payment
        </a>
      </div>
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover table-striped mb-0">
            <thead class="table-light">
              <tr>
                <th>Customer</th>
                <th>Product</th>
                <th>Qty</th>
                <th>Total (‚Çπ)</th>
                <th>Paid (‚Çπ)</th>
                <th>Status</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
              <% payments.forEach(p => { %>
                <tr>
                  <td><%= p.customer.name %></td>
                  <td><%= p.product.name %></td>
                  <td><%= p.quantity %></td>
                  <td><%= p.totalAmount %></td>
                  <td><%= p.amountPaid %></td>
                  <td>
                    <% if (p.paymentStatus === "Paid") { %>
                      <span class="badge bg-success">Paid</span>
                    <% } else if (p.paymentStatus === "Partial") { %>
                      <span class="badge bg-warning text-dark">Partial</span>
                    <% } else { %>
                      <span class="badge bg-danger">Due</span>
                    <% } %>
                  </td>
                  <td><%= new Date(p.paymentDate).toLocaleDateString() %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>

</body>
</html>

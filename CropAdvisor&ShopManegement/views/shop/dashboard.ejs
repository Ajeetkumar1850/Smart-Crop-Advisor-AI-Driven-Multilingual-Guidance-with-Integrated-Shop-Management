<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Smart Agro Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    :root {
      --green-dark: #1b5e20;
      --green: #2e7d32;
      --green-light: #a5d6a7;
      --text-dark: #212121;
      --text-muted: #616161;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(to bottom right, #e8f5e9, #f1f8e9);
      color: var(--text-dark);
    }

    .navbar {
      background-color: var(--green-dark);
      box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    }

    .navbar-brand {
      font-weight: bold;
      font-size: 1.5rem;
    }

    .navbar a {
      color: #fff !important;
      transition: all 0.3s ease;
    }

    .navbar a:hover {
      color: var(--green-light) !important;
    }

    .dashboard-header {
      background-color: var(--green);
      color: white;
      padding: 2rem;
      border-radius: 12px;
      margin: 2rem auto;
      max-width: 960px;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
      text-align: center;
    }

    .dashboard-header h1 {
      font-size: 2.2rem;
    }

    .dashboard-header p {
      font-size: 1rem;
      color: #e0f2f1;
    }

    .card {
      border: none;
      border-left: 5px solid var(--green);
      border-radius: 15px;
      box-shadow: 0 6px 12px rgba(0,0,0,0.1);
      transition: transform 0.3s ease;
    }

    .card:hover {
      transform: translateY(-5px);
    }

    .card h5 {
      color: var(--text-muted);
      margin-bottom: 10px;
      font-weight: 500;
    }

    .card h2 {
      font-size: 2.5rem;
      color: var(--green-dark);
      font-weight: bold;
    }

  </style>
</head>
<body>

  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">ðŸŒ¿ Smart Agro</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/prod">Products</a></li>
          <li class="nav-item"><a class="nav-link" href="/cust">Customers</a></li>
          <li class="nav-item"><a class="nav-link" href="/payments">Payments</a></li>
          <li class="nav-item"><a class="nav-link" href="/auth/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="dashboard-header">
    <h1>Welcome to Smart Agro Admin Panel</h1>
    <p>Quick glance at your store status</p>
  </div>
  <div class="container">
    <div class="row g-4">
      <div class="col-md-4">
        <div class="card p-4 text-center">
          <h5>Total Customers</h5>
          <h2><%= totalCustomers %></h2>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card p-4 text-center">
          <h5>Total Products</h5>
          <h2><%= totalProducts %></h2>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card p-4 text-center">
          <h5>Total Stocks</h5>
          <h2><%= stock %></h2>
        </div>
      </div>
    </div>
  </div>

<!-- // speech wala code -->
  <script>
  function speakText(text) {
    const speech = new SpeechSynthesisUtterance(text);
    speech.lang = "en-IN";
    speech.rate = 1;
    window.speechSynthesis.speak(speech);
  }

  // Pass user data from EJS to JavaScript
  const user = JSON.parse('<%- JSON.stringify(user || null) %>');

  window.onload = function () {
    if (user && user.name) {
      speakText("Welcome " + user.name + ", to Agro Fertilizer Dashboard");
    } else {
      speakText("Agro fertiliser dashboard me aapka swagat hai  kripya bataye hm aapki kya madad kar sagit kte hai");
    }
  };
</script>

</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Cart</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      background-color: #f9f9f9;
      font-family: 'Segoe UI', sans-serif;
    }

    .cart-container {
      max-width: 1000px;
      margin: 40px auto;
      background: white;
      padding: 30px;
      border-radius: 16px;
      box-shadow: 0 0 12px rgba(0, 0, 0, 0.05);
    }

    .cart-title {
      font-size: 2.2rem;
      font-weight: 600;
      color: #333;
      text-align: center;
      margin-bottom: 30px;
    }

    .table th, .table td {
      vertical-align: middle !important;
      text-align: center;
    }

    .btn-danger:hover {
      background-color: #c82333;
      border-color: #bd2130;
    }

    .btn-outline-secondary:hover {
      background-color: #eee;
    }

    .empty-cart {
      font-size: 1.25rem;
      text-align: center;
      margin: 50px 0;
    }
  </style>
</head>
<body>

  <div class="cart-container">
    <h2 class="cart-title">üõí Your Shopping Cart</h2>

    <% if (cart.length === 0) { %>
      <div class="alert alert-warning text-center fs-5 my-5">
        <i class="bi bi-cart-x"></i> Your cart is empty.
        <a href="/products" class="btn btn-outline-success ms-2">Shop Now</a>
      </div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-bordered align-middle">
          <thead class="table-dark">
            <tr>
              <th>Product</th>
              <th>Qty</th>
              <th>Price</th>
              <th>Subtotal</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% let total = 0; %>
            <% cart.forEach(item => {
              const subtotal = item.quantity * item.product.price;
              total += subtotal;
            %>
              <tr>
                <td class="fw-semibold text-capitalize"><%= item.product.name %></td>
                <td><%= item.quantity %></td>
                <td>‚Çπ<%= item.product.price %></td>
                <td>‚Çπ<%= subtotal %></td>
                <td>
                  <form method="POST" action="/cart/remove/<%= item.product._id %>">
                    <button type="submit" class="btn btn-sm btn-danger">üóë Remove</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
          <tfoot>
            <tr class="table-light fw-bold">
              <td colspan="3" class="text-end">Total:</td>
              <td colspan="2">‚Çπ<%= total %></td>
            </tr>
          </tfoot>
        </table>
      </div>

      <div class="d-flex justify-content-between mt-4"> 
        <a href="/prod" class="btn btn-outline-secondary">‚Üê Continue Shopping</a>
      </div>
    <% } %>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
